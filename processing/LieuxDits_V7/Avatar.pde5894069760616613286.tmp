int AvatarPosX;
int AvatarPosY;
int AvatarW, AvatarH;

private static final int INIT = 0;
private static final int WAKE_UP = 1;
private static final int WAIT_DEST = 2;
private static final int ASK_AGAIN =3;
private static final int CALCUL_DEST = 4;
private static final int SAY_DEST = 5;
private static final int ROAD_MAP = 6;
private static final int SAY_NOT_EASY =7;
private static final int WAIT_HELP =8;
private static final int BON_VOYAGE =9;
private static final int REPRISE =10;
private static final int WAIT =11;


int Ava=INIT;
int Previous=-1;
boolean Change=false;
float Timer=0.0;

void Beep()
{
  fileOK.amp(1);
  fileOK.play();
}

void Laugh()
{
  println("************ LAUGH *****************");
  AlexLaugh.amp(1);
  AlexLaugh.play();
}


void Avatar()
{
  imageMode(CENTER);
  AvatarPosX=(width/2-80);
  if (ModeDebug) AvatarPosY=(height/2+200);
  else AvatarPosY=(height/2-100);
  
  
  AvatarW=1800;
  AvatarH=1300;

  if (Ava != Previous) 
  {
    Change=true;
    Timer=0;
  } 
  else Change=false;
  Previous=Ava;

  if (Timer<10000) Timer++;

  switch(Ava) //******************************************************
  {
    case INIT:
      if (Change) 
        {
           println("INIT");
           socket.sendMessage("Urban Lab, le dispositif Lieux Dits est prÃªt a connecter les voyageurs !");
           ActiveGuys=0;
           SpeachText="?";
           FlagTxt=false;
           Destination="";
        }
        FlagTxt=false;
        int r = (int)random(0, 6666);
        //print("Random=");
        //println(r);
        if(r==23) 
        {
          Laugh();
        }
    
    if ((Timer > 150) && (ActiveGuys>0)) Ava=WAKE_UP;
    //println(Timer);
    
    break;
    
    case WAKE_UP:
      if(Change)
        {
          println("WAKE_UP");
          //Beep();
          Compute.amp(1);
          Compute.play();
          Bonjour.play();
        }
        image(Bonjour, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
         SpeachText="?";
         FlagTxt=false;
        if (Bonjour.time()>=Bonjour.duration()-0.5) 
        {
          Ava=WAIT_DEST;
          Bonjour.stop();
        }
    break;
    
    case WAIT_DEST:
        if(Change)
        {
          println("WAIT_DEST");
          Beep();
          Wait.play();
          SpeachText="?";
          FlagTxt=true;
        }
        image(Wait, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
        if (Wait.time()>=Wait.duration()-0.2) 
        {
          Ava=ASK_AGAIN;
          Wait.stop();
        }
        if (SpeachText!="?")
        {
          Destination=SpeachText;
          Ava=CALCUL_DEST;
        }
    break;
    
    case ASK_AGAIN:
      if(Change)
        {
          println("ASK_AGAIN");
          Repeat.play();
        }
        image(Repeat, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
         SpeachText="?";
         FlagTxt=false;
      if (Repeat.time()>=Repeat.duration()-0.2) 
      {
        Repeat.stop();
        Ava=WAIT_DEST; 
      }
      if(!Presence )
        {
          Repeat.stop();
          Ava=INIT;
        }
    break;
    
    case CALCUL_DEST:
       if(Change)
        {
          println("CALCUL_DEST");
          //Beep();
          OKdest.play();
        }
      image(OKdest, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
      if (OKdest.time()>=OKdest.duration()-0.2) 
      {
        OKdest.stop();
        Ava=SAY_DEST; 
      }
    break;
    
    case SAY_DEST:
      if(Change)
        {
          println("SAY_DEST");
          socket.sendMessage(Destination);
          Wait.play();
        }
        image(Wait, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
        //println(Timer);
        if (Timer > 80)
        {
          Wait.stop();
          Ava=ROAD_MAP;
          Compute.amp(1);
          Compute.play();
        }
    break;
    
    case ROAD_MAP:
      if(Change)
        {
          println("ROAD_MAP");
          RoadMap.play();
        }
        image(RoadMap, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
        if(RoadMap.time()>=RoadMap.duration()-0.2) 
        {
          Ava=WAIT;
          RoadMap.stop();
        }
        
        if((RoadMap.time()>=RoadMap.duration()-15) && (MirrorOn==true)) 
        {
          Ava=SAY_NOT_EASY;
          RoadMap.stop();
        }
    break;
    
    case SAY_NOT_EASY:
       if(Change)
        {
          println("SAY_NOT_EASY");
          Sorry.play();
        }
        image(Sorry, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
        SpeachText="?";
        FlagTxt=false;
        if(Sorry.time()>=Sorry.duration()-0.2) 
        {
          Sorry.stop();
          Ava=WAIT_HELP;
        }
    break;
    
    case WAIT_HELP:
      if(Change)
      {
        Beep();
        println("WAIT_HELP");
        Wait.loop();
        SpeachText="?";
        FlagTxt=true;
      }
      image(Wait, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
      if(!Presence && Timer >1000)
        {
          Wait.stop();
          Ava=INIT;
        }
      if (SpeachText!="?")
        {
          Destination=SpeachText;
          SpeachText="?";
          Wait.stop();
          Ava=SAY_NOT_EASY;
          int OuiPos=Destination.indexOf("oui");
          print("OUI=");
          println(OuiPos);
          int NonPos=Destination.indexOf("non");
          print("NON=");
          println(NonPos);
          //if(Destination.equals("oui")) 
          if(OuiPos > -1)
          {
            Wait.stop();
            Ava=BON_VOYAGE;
          }
          //if(Destination.equals("non"))
          if(NonPos > -1)
          {
            Wait.stop();
            Ava=REPRISE;
          }
        }
    break;
    
    case REPRISE:
      if(Change)
      {
        Beep();
        println("REPRISE");
        Reprise.play();
      }
      image(Reprise, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
      if(Reprise.time()>=Reprise.duration()-0.2) 
        {
          Reprise.stop();
          Ava=WAIT;
        }
    break;
    
    case BON_VOYAGE:
      if(Change)
      {
        Beep();
        println("BON_VOYAGE");
        BonVoyage.play();
      }
      image(BonVoyage, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
      if(BonVoyage.time()>=BonVoyage.duration()-0.2) 
        {
          BonVoyage.stop();
          Ava=WAIT;
        }
    break;
    
    case WAIT:
      if(Change)
        {
          println("WAIT");
          Wait.loop();
        }
        if(Timer<300) image(Wait, AvatarPosX, AvatarPosY,AvatarW, AvatarH);
        //println(Timer);
        if(!Presence)
        {
          Wait.stop();
          Ava=INIT;
        }
    break;
  }
  
}